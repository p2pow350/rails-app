<%= render 'layouts/page_search_form', search_criteria: ['name', 'email'] %>

<div class="ui clearing segments">

  <div class="ui segment">
    <h3>Listing <%= controller.controller_name.titleize %> 
    	<%= render 'layouts/page_action_buttons' %>
    </h3>
  </div>

  <div class="ui secondary segment">
  	<!-- page content -->
	<table class="ui sortable very compact striped table">
	  <thead>
		<tr>
		  <th>Name</th>
		  <th>Is customer</th>
		  <th>Is supplier</th>
		  <th>Email</th>
		  <th width="30px"></th>
		</tr>
	  </thead>
	
	  <tbody>	  
		<% @carriers.each do |record| %>
		  <tr class="collapsing">
			<td><%= record.name %></td>
			<td><%= record.is_customer %></td>
			<td><%= record.is_supplier %></td>
			<td><%= record.email %></td>
			<%= render 'layouts/table_row_action_buttons', collection: @carriers, row: record %>
		  </tr>
		<% end %>
	  </tbody>
	  <%= render 'layouts/table_paging', collection: @carriers %>
	  
	</table>
	<!-- end page content -->
  </div>
  
</div>

