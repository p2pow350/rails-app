<%= simple_form_for(@carrier) do |f| %>
  <% if @carrier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@carrier.errors.count, "error") %> prohibited this carrier from being saved:</h2>

      <ul>
      <% @carrier.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name %>
  <%= f.input :is_customer, as: :boolean, wrapper: :ui_checkbox %>
  <%= f.input :is_supplier, as: :boolean, wrapper: :ui_checkbox %>
  <%= f.button :button, "Save" %>
  <%= link_to 'Back', carriers_path, class: "ui button" %>

<% end %>
