<%= form_for(@carrier) do |f| %>
  <% if @carrier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@carrier.errors.count, "error") %> prohibited this carrier from being saved:</h2>

      <ul>
      <% @carrier.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :is_customer %><br>
    <%= f.check_box :is_customer %>
  </div>
  <div class="field">
    <%= f.label :is_supplier %><br>
    <%= f.check_box :is_supplier %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
