<%= simple_form_for(@carrier) do |f| %>

  <%= f.input :name %>
  <%= f.input :status, :label => "Enabled", as: :boolean, wrapper: :ui_toggle_checkbox %>
  <%= f.input :currency, collection: Currency.major_currencies(Money::Currency.table), input_html: { class: "ui search selection dropdown", maxlength: 60 }, prompt: "Choose a Currency" %>
  <%= f.input :email %>  
  <%= f.input :is_customer, as: :boolean, wrapper: :ui_checkbox %>
  <%= f.input :is_supplier, as: :boolean, wrapper: :ui_checkbox %>
  
  <%= f.button :button, "Save" %>
  <%= link_to 'Back', url_for(:back), class: "ui button" %>
<% end %>
