<%= simple_form_for(@option) do |f| %>

  <%= f.input :area, collection: [ "mail_out", "mail_in"], input_html: { class: "ui dropdown", maxlength: 60 }, prompt: "Area" %>
  <%= f.input :key %>  
  <%= f.input :value %>  
  
  <%= f.button :button, "Save" %>
  <%= link_to 'Back', url_for(:back), class: "ui button" %>
<% end %>
