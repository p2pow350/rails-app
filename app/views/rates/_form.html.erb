<%= simple_form_for(@rate) do |f| %>

  <%= f.association :carrier, collection: Carrier.enabled.order(:name), input_html: { class: "ui dropdown", maxlength: 60 }, prompt: "Choose a Carrier" %>
  <%= f.association :zone, collection: Zone.order(:name), input_html: { class: "ui dropdown", maxlength: 60 }, prompt: "Choose a Zone" %>
  
  <%= f.input :name %>    
  <%= f.input :prefix %>
  <%= f.input :start_date, input_html: { class: "ui calendar", id: "start_date" } %>
  <%= f.input :price_min %>
  
  <%= f.button :button, "Save" %>
  <%= link_to 'Back', url_for(:back), class: "ui button" %>
<% end %>
