<% c = controller.controller_name %>
<% exclude_controller_actions = [ 'options' ] %>

<td> 
  <div class="ui mini icon buttons">                                                                                                                                   
	<%= link_to '<i class="edit icon"></i>'.html_safe, edit_polymorphic_path(row), class: 'ui button' %>    
	
	<% unless exclude_controller_actions.include? c %>
		<%= link_to '<i class="delete icon"></i>'.html_safe, row, method: :delete, data: { confirm: "Are you sure to delete '#{row.name}' ?" }, class: 'ui button red' %>  
	<% end %>
	
  </div>                                                                                                                                                          
</td> 			
