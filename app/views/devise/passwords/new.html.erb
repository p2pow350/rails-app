<style type="text/css">
body > .grid {
  height: 100%;
}
.image {
  margin-top: -100px;
}
.column {
  max-width: 450px;
}
</style>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">
        <i class="privacy icon"></i>Forgot your password?
      </div>
    </h2>

	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'ui large form' }) do |f| %>

	<div class="ui stacked segment">
	
	  <%= f.error_notification %>
	
	  <div class="field">
		<%= f.input :email, required: true, autofocus: true %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Send me reset password instructions", class: 'ui orange submit button' %>
	    <%= link_to 'Back', root_path, class: "ui button" %>
	  </div>
	  
	  <% end %>

	</div>
  </div>
</div>

